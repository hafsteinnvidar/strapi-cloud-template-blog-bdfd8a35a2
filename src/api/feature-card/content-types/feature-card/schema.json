{
  "kind": "collectionType",
  "collectionName": "feature_cards",
  "info": {
    "singularName": "feature-card",
    "pluralName": "feature-cards",
    "displayName": "Feature Card",
    "description": "Feature cards for bento grid"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "string",
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": ["small", "medium", "large"],
      "default": "small",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  }
}